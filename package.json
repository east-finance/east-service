    "@nestjs/platform-express": "^7.6.5",
    "@nestjs/swagger": "^4.7.9",
    "@nestjs/typeorm": "7.1.5",
    "@types/uuid": "^8.3.0",
    "@wavesenterprise/grpc-listener": "0.0.1",
    "@wavesenterprise/js-sdk": "^3.1.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.1.0",
    "dotenv": "8.2.0",
    "got": "^11.8.1",
    "moment": "^2.29.1",
    "passport": "0.4.1",
    "passport-http-bearer": "1.0.1",
