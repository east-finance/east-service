{
  "name": "east-service",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "tslint": "tslint 'src/**/*.ts' -c tslint.json -p tsconfig.json --fix",
    "start": "node dist/src/main.js",
    "dev": "ts-node --files src/main.ts",
    "migrate:gen": "npx typeorm migration:generate --name",
