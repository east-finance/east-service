  "devDependencies": {
    "@nestjs/testing": "^7.6.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.9",
    "@types/node": "^14.14.20",
    "@types/passport-http-bearer": "1.0.36",
    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/pg": "^7.14.7",
    "@types/supertest": "2.0.10",
    "husky": "4.3.6",
    "prettier": "2.2.1",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
