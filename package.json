    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build:check && npm test"
    }
  }
